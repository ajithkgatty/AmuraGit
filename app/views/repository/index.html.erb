<div class="setMargin">
	<p class="set_header"> List of Repositories </p>
	<% @response.each do |r| %>
		<div class="repo-blocks" onclick="handle(this)">
			<%#= r["id"] %>
			<span class="set_title"> <%= r["name"] %> </span>
			<%#= link_to r["name"], repo_path(r["id"]) %>
			<div class="inner-block" style="display: none" >

				<p> <span class="set_title"> Repository Name: </span> <%= r["name"] %> </p>
				<p> <span class="set_title"> Repository Description: </span> <%= r["description"].blank? ? "No discription as of yet!! " : r["description"] %> </p>
			</div>
		</div>
	<% end %> 
</div>

<script>
function handle(ele)
{ 
	$(ele).find('.inner-block').toggle();
}
</script>